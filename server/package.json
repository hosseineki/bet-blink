{
    "name": "betblink-server",
    "version": "1.0.0",
    "description": "BetBlink API Server with Bun and TypeScript",
    "main": "src/index.ts",
    "scripts": {
        "dev": "bun run --hot src/index.ts",
        "start": "bun run src/index.ts",
        "build": "bun build src/index.ts --outdir dist",
        "test": "bun test",
        "test:firebase": "node scripts/test-firebase.js",
        "format:key": "node scripts/format-private-key.js"
    },
  "dependencies": {
